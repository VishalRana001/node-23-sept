<%- include('./base/header.ejs') %>
<div class="container">
    <div class="row">
        <h4 class="text-center my-3">Student List</h4>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>RollNo</th>
                    <th>firstName</th>
                    <th>lastName</th>
                    <th>fatherName</th>
                    <th>adharCardNo</th>
                    <th>mobileNo</th>
                    <th>action</th>
                </tr>
                <% students.forEach((student)=> { %>
                    <tr>
                        <td><%= student.rollNo %></td>
                        <td><%= student.firstName %></td>
                        <td><%= student.lastName %></td>
                        <td><%= student.fatherName %></td>
                        <td><%= student.adharCardNo %></td>
                        <td><%= student.mobileNo %></td>
                        <td>
                        <a href="/student/page/for/edit/<%= student._id%>" class="btn btn-warning w-40">edit</a>
                         <a href="/student/delete/<%= student._id%>" class="btn btn-danger w-40">delete</a>
                        </td>
                         </tr>
                <%}) %>       
            </thead>
        </table>
    </div>
</div>
<%- include('./base/footer.ejs') %>